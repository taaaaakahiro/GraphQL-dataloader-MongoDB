# GraphQL schema example
#
# https://gqlgen.com/getting-started/


type User {
  id: ID!
  name: String!
}

type Message {
  id: ID!
  user: User!
  message: String!
}

type Query {
  users: [User!]!
  messages(userID: ID!): [Message]
}

input NewMessage {
  message: String!
  userId: ID!
}

input NewUser {
  userName: String!
}

type Mutation {
  createMessage(input: NewMessage!): Message!
  createUser(input: NewUser!): User!
}
